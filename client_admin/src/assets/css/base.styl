html,body
  width:100%
  height:100%
body
  font-size:14px
  color:#666
a
  color:rgb(77,85,93)
  text-decoration:none
  &:hover
    text-decoration:none
.clearfix
  display:inline-block
  &:after
    display:block
    height:0
    line-height:0
    content:'.'
    visibility:hidden
    clear:both

@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
  .border-1px
    &:after
      -webkit-transform:scaleY(0.7)
      transform:scaleY(0.7)
@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
  .border-1px
    &:after
      -webkit-transform:scaleY(0.5)
      transform:scaleY(0.5)
.text-right
  text-align:right
.text-center
  text-align:center
.font-red
  color:#fa5555
.fsize-12
  font-size:12px
.cursor-pointer
  cursor:pointer
.margin-tb
  margin:12px 0
.fl
  float:left
.fr
  float:right
table
  display:table
  border-spacing:0
  border-collapse:collapse
  border:1px solid #ebeef5
  width:100%
  max-width:100%
  font-size: 14px;
  color: #606266;
  thead
    display:table-header-group
    vertical-align:middle
    color: #909399;
    font-weight: 500;
    th
      border-top:0
      border-bottom: 1px solid #ebeef5;
      padding:22px 12px
      text-align:left
      font-weight:600
      white-space: nowrap;
      overflow: hidden;
      user-select: none;
      text-align: left;
      text-overflow: ellipsis;
      vertical-align: middle;
      position: relative;
      border-right: 1px solid #ebeef5;
  tbody
    display: table-row-group
    tr
      background:#fff
      &:nth-child(even)
        background: #fafafa
      &:hover
        background:#f5f6fa
      td
        border-bottom: 1px solid #ebeef5
        padding:18px 12px
        display:table-cell
        word-wrap:break-word
        word-break:break-all
        border-right: 1px solid #ebeef5;
        text-overflow: ellipsis;
        vertical-align: middle;
        position: relative;
